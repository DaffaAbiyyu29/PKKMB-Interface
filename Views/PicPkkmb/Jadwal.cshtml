<script>
	$('.senin').hide();
	$('.selasa').hide();
	$('.rabu').hide();
	$('.kamis').hide();
	$('.jumat').hide();
	$('.semua').show();

	// Add an event listener to the tipeakun dropdown
	$(document).ready(function () {
		$('[name="hari"]').change(function () {
			// Get the selected value
			var selectedHari = $(this).val();

			// Toggle visibility based on the selected account type
			if (selectedHari === 'Senin') {
				$('.senin').show();
				$('.selasa').hide();
				$('.rabu').hide();
				$('.kamis').hide();
				$('.jumat').hide();
				$('.semua').hide();
			} else if (selectedHari === 'Selasa') {
				$('.senin').hide();
				$('.selasa').show();
				$('.rabu').hide();
				$('.kamis').hide();
				$('.jumat').hide();
				$('.semua').hide();
			} else if (selectedHari === 'Rabu') {
				$('.senin').hide();
				$('.selasa').hide();
				$('.rabu').show();
				$('.kamis').hide();
				$('.jumat').hide();
				$('.semua').hide();
			} else if (selectedHari === 'Kamis') {
				$('.senin').hide();
				$('.selasa').hide();
				$('.rabu').hide();
				$('.kamis').show();
				$('.jumat').hide();
				$('.semua').hide();
			} else if (selectedHari === 'Jumat') {
				$('.senin').hide();
				$('.selasa').hide();
				$('.rabu').hide();
				$('.kamis').hide();
				$('.jumat').show();
				$('.semua').hide();
			} else if (selectedHari === 'Semua') {
				$('.senin').hide();
				$('.selasa').hide();
				$('.rabu').hide();
				$('.kamis').hide();
				$('.jumat').hide();
				$('.semua').show();
			}
		});
	});
</script>